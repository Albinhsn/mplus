#version 450 core



layout(isolines) in;

void main(){

  float t = gl_TessCoord.x;

  vec3 p0 = gl_in[0].gl_Position.xyz;
  vec3 p1 = gl_in[1].gl_Position.xyz;
  vec3 p2 = gl_in[2].gl_Position.xyz;

  float b0 = (1 - t) * (1 - t);
  float b1 = 2 * (1 - t);
  float b2 = t * t;

  vec3 p = b0 * p0 + b1 * p1 + b2 * p2;

  gl_Position = vec4(p, 1.0);
}
